{
  "swagger": "2.0",
  "info": {
    "title": "API Trans Services",
    "version": "1.0.0",
    "description": "Una API para gestionar servicios de transporte.",
    "contact": {
      "name": "Jesus Cortez",
      "email": "cortezfrancisco025@gmail.com",
      "url": "https://github.com/RitoTorri"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api/trans/services",
  "tags": [
    {
      "name": "Authentication",
      "description": "Permite autenticar usuarios autorizados."
    }
  ],
  "schemes": ["http"],
  "paths": {
    "/login": {
      "post": {
        "summary": "Iniciar sesión de usuario",
        "description": "Este endpoint es el encargado de autenticar un usuario y devolver un token JWT. Por favor asegures de enviar formatos de texto correctos.",
        "tags": ["Authentication"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "usuario",
                  "description": "Nombre de usuario para autenticar"
                },
                "password": {
                  "type": "string",
                  "example": "12345",
                  "description": "Contraseña del usuario"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Inicio de sesión exitoso. Devuelve un token JWT"
          },
          "400": {
            "description": "Faltan campos por enviar. No se deben de enviar campos nulos."
          },
          "404": {
            "description": "Usuario no encontrado. Contraseña incorrecta o usuario no existe."
          },
          "422": {
            "description": "Error de validación. Campos con formatos incorrectos."
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  }
}